<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>servlets.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCities</servlet-name>
        <servlet-class>servlets.getCities</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCityByID</servlet-name>
        <servlet-class>servlets.getCityByID</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getPlaceByID</servlet-name>
        <servlet-class>servlets.getPlaceByID</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getPlaceInfoByID</servlet-name>
        <servlet-class>servlets.getPlaceInfoByID</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>seeOnePlan</servlet-name>
        <servlet-class>servlets.seeOnePlan</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>seePlans</servlet-name>
        <servlet-class>servlets.seePlans</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCities</servlet-name>
        <url-pattern>/getcities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCityByID</servlet-name>
        <url-pattern>/getcitybyID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getPlaceByID</servlet-name>
        <url-pattern>/getplacebyID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getPlaceInfoByID</servlet-name>
        <url-pattern>/getplaceinfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>seeOnePlan</servlet-name>
        <url-pattern>/seeoneplan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>seePlans</servlet-name>
        <url-pattern>/seeplans</url-pattern>
    </servlet-mapping>
</web-app>