<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:src="@drawable/parliment" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="219dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="448dp"
            android:text="Budapest"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:typeface="sans"

            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="221dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="268dp"
            android:layout_marginEnd="178dp"
            android:layout_marginBottom="399dp"
            android:text="July 05 - July 15"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="438dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="293dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/tts_linear_style"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:onClick="filters"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="320dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:src="@drawable/ic_filters" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:text="July 05 - July 07"
                    android:textAllCaps="false"
                    android:textColor="#969696"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-11dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/historical" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="267dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="88dp"
                    android:text="Historical"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"/>

            </RelativeLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="347dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="661dp"
            android:background="@null"
            app:srcCompat="@android:drawable/ic_dialog_info" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="347dp"
            android:layout_marginBottom="661dp"
            android:background="@null"
            app:srcCompat="@drawable/abc_vector_test"
            android:onClick="backToPostLogin"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>