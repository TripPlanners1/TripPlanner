<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:src="@drawable/parliment"
            android:id="@+id/selectionImage"/>

        <TextView
            android:id="@+id/selectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="219dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="448dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:typeface="sans"

            />

        <TextView
            android:id="@+id/arrivalSelect"
            android:layout_width="221dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="268dp"
            android:layout_marginEnd="178dp"
            android:layout_marginBottom="399dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans"

            />


        <TextView
            android:id="@+id/returnSelect"
            android:layout_width="221dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="268dp"
            android:layout_marginEnd="178dp"
            android:layout_marginBottom="399dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="438dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="293dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/tts_linear_style"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="335dp"
                    android:layout_marginBottom="368dp"
                    android:background="@null"
                    android:onClick="backToPostLogin"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </RelativeLayout>

            <Button
                android:id="@+id/selectionOpt1"
                android:layout_width="280dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:backgroundTint="#1eb330"
                android:onClick="goToMap"
                android:radius="14dp"
                android:text="Suggested Locations Trip Plan"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginPassword"
                app:layout_constraintVertical_bias="0.143" />

            <Button
                android:id="@+id/selectionOpt2"
                android:layout_width="280dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:backgroundTint="#1eb330"
                android:onClick="extractJson"
                android:radius="14dp"
                android:text="Suggested Locations Near You"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginPassword"
                app:layout_constraintVertical_bias="0.143" />


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>